<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".passerror">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/colorBackground">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/lanSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_border"
                android:spinnerMode="dropdown"
                android:text="English" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="149dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginEnd="145dp"
            android:src="@drawable/in" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Reset Password"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:text="Please enter the OTP(One-time Password)Sent on your registered email address to resent your password"
                android:textAlignment="center"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="287dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/black_border"
                android:text="Enter the OTP" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="287dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:background="@drawable/black_border"
                android:text="password" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="287dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"

                android:background="@drawable/black_border"
                android:text="conform password" />

            <Button
                android:id="@+id/button"
                android:layout_width="400dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:color="@color/blu"
                android:text="RESET" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/t6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Resend OTP"
                    android:textColor="@color/colorPrimaryBlue" />

                <TextView
                    android:id="@+id/copuri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@string/copy_right_by_margasoft"
                    android:textColor="@color/disableBlack"
                    android:textSize="14sp" />


            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>